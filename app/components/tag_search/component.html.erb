<%= form_with url: @path, local: true, method: :get, class: "d-flex" do |form| %>
  <%= form.text_field :q, placeholder: "タグ or 名前 or 撮影/更新日", class: "form-control me-sm-2", value: @word %>
  <%= form.submit "検索", class: "btn btn-outline-success me-2 me-sm-0", name: nil %>
  <div style="padding-left:5px;">
    <a class="btn btn-outline-success me-2 me-sm-0" data-bs-toggle="offcanvas" href="#offcanvas-calendar" role="button" aria-expanded="false" aria-controls="offcanvas-calendar">
      <i class="bi bi-calendar"></i>
    </a>
  </div>
<% end %>
